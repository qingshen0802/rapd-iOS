{
  "background_color": "FFFFFF",
  "form_controller": true,
  "back_button": "images/back-button-white.png",
  "elements": [
    {
      "outlet": "profile_image",
      "type": "image",
      "name": "images/profile_placeholder.png",
      "corner_radius": 35,          
      "autolayout": {
        "width": 70,
        "height": 70,
        "top": 70,
        "center_x": -70
      }
    },
    
    {
      "outlet": "profile_image_button",
      "type": "button",
      "title": "MUDAR IMAGEM",
      "corner_radius": 3.0,
      "action": "selectPhoto",
      "color": "F15E4F",
      "autolayout": {
        "top": 90,
        "center_x": 40,
        "width": 120,
        "height": 26
      },
      "font": {
        "color": "FFFFFF",
        "size": 12,
        "name": "Roboto-Bold"
      }
    },
    
    {
      "outlet": "username_field",
      "next_outlet": "name_field",
      "type": "text_field",
      "scroll_top": 0,
      "placeholder": "Nome de usuário para este usuário",
      "underlined": true,          
      "autolayout": {
        "width": 300,
        "center_x": 0,
        "top": 160,
        "height": 30
      }
    },
    
    {
      "outlet": "name_field",
      "next_outlet": "document_id_field",          
      "type": "text_field",
      "scroll_top": 0,
      "placeholder": "Razão social ou nome fantasia",
      "underlined": true,          
      "autolayout": {
        "width": 300,
        "center_x": 0,
        "top": 210,
        "height": 30
      }
    },
    
    {
      "outlet": "document_id_field",
      "next_outlet": "email_field",          
      "type": "text_field",
      "scroll_top": 0,
      "placeholder": "CNPJ",
      "number_only": true,
      "mask": true,
      "underlined": true,          
      "autolayout": {
        "width": 300,
        "center_x": 0,
        "top": 260,
        "height": 30
      }
    },
    
    {
      "outlet": "email_field",
      "type": "text_field",
      "scroll_top": 200,
      "placeholder": "E-mail",
      "underlined": true,
      "email_field": true,
      "autolayout": {
        "width": 300,
        "center_x": 0,
        "top": 310,
        "height": 30
      }
    },

    {
      "outlet": "is_legal_representer", 
      "type": "button",
      "checkbox": true,
      "action": "toggleLegalRepresenter",
      "corner_radius": 6.0,
      "autolayout": {
        "top": 360,
        "center_x": -140,
        "width": 25,
        "height": 25
      }
    },               
    
    {
      "outlet": "is_legal_representer_label", 
      "type": "label",
      "text_alignment": "left",
      "autolayout": {
        "top": 362,
        "center_x": 15,
        "width": 280,
        "height": 20
      },
      "content": "Sou legalmente responsável pela empresa",
      "font": {
        "name": "Roboto-Light",
        "size": 14,
        "color": "666666"
      }
    },  
    
    {
      "outlet": "accept_terms_button", 
      "type": "button",
      "checkbox": true,
      "action": "toggleAcceptTerms",
      "corner_radius": 6.0,
      "autolayout": {
        "top": 410,
        "center_x": -140,
        "width": 25,
        "height": 25
      }
    },           
    
    {
      "outlet": "accept_terms_label", 
      "type": "label",
      "text_alignment": "left",
      "autolayout": {
        "top": 412,
        "center_x": -35,
        "width": 180,
        "height": 20
      },
      "content": "Li e aceito os",
      "font": {
        "name": "Roboto-Light",
        "size": 14,
        "color": "666666"
      }
    },    
    
    {
      "outlet": "terms_button", 
      "type": "button",
      "action": "view_terms",
      "title": "termos de uso",
      "link_style": true,
      "font": {
        "name": "Roboto",
        "size": 14,
        "color": "F15E4F"
      },
      "autolayout": {
        "top": 412,
        "center_x": 5,
        "width": 180,
        "height": 20
      },
    },
    
    {
      "outlet": "finish_signup_button", 
      "type": "button",
      "title": "CADASTRAR",
      "color": "F15E4F",
      "action": "finish_signup",
      "corner_radius": 6.0,
      "autolayout": {
        "bottom": -15,
        "leading": 20,
        "trailing": -20,
        "height": 50,
        "attach_to_super_super_view": true
      }
    },        
  ]
}