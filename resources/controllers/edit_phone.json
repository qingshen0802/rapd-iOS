{
  "background_color": "FFFFFF",
  "title_color": "364655",
  "form_controller": true,
  "elements": [
    
    {
      "outlet": "main_label", 
      "type": "label",
      "text_alignment": "center",
      "autolayout": {
        "top": 80,
        "center_x": 0,
        "width": 300,
        "height": 40
      },
      "content": "Este é o número de celular\nvinculado com a sua conta.",
      "font": {
        "name": "Roboto",
        "size": 16,
        "color": "364655"
      }
    },        
    
    {
      "outlet": "phone_field",    
      "type": "text_field",
      "text_alignment": "center",
      "auto_capitalization": true,
      "scroll_top": 40,
      "placeholder": "Seu telefone",
      "underlined": true, 
      "autolayout": {
        "top": 160,            
        "width": 300,
        "center_x": 0,
        "height": 80
      },

      "font": {
        "name": "Roboto-Light",
        "size": 26,
        "color": "4A4A4A"
      }
    },
    
    {
      "outlet": "save_button", 
      "type": "button",
      "title": "ALTERAR NÚMERO",
      "color": "F15E4F",
      "font":{
        "name": "Roboto-Bold",
        "size": "18"
      },
      "action": "save",
      "corner_radius": 6.0,
      "autolayout": {
        "top": 440,
        "center_x": 0,
        "width": 300,
        "height": 50
      }
    },        
  ]
}