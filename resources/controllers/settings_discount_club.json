{
  "background_color": "ECF0F1",
  "title_color": "364655",
  "elements": [
    {
      "outlet": "table_view",
      "type": "table_view",
      "disable_scroll": true,
      "cells": {"switch": 50},
      "autolayout": {
        "top": 80,
        "height": 90,
        "leading": 0,
        "trailing": 0
      }
    },
    
    {
      "type": "label",
      "outlet": "main_label",
      "content": "Escolha quanto você bonificará seus usuários para cada compra efetuada:",
      "autolayout": {
        "top": 90,
        "trailing":-10,
        "leading": 10,
        "center_x": 0,
        "width": 320,
        "height": 200
      },
      "font": {
        "name": "Roboto",
        "color": "333333",
        "size": 15
      }
    },        
    
    {
      "outlet": "bonus_label", 
      "type": "label",
      "autolayout": {
        "leading": 10,
        "top": 230,
        "center_x": -90,
        "width": 140,
        "height": 20
      },
      "content": "Bonificar",
      "font": {
        "name": "Roboto",
        "size": 14,
        "color": "666666"
      }
    },         
    
    {
      "outlet": "bonus_field",
      "next_outlet": "requirement_field",
      "type": "text_field",
      "auto_capitalization": false,
      "underlined": true,
      "placeholder": "Ex: R$1,00",
      "autolayout": {
        "leading": 10,
        "width": 140,
        "center_x": -90,
        "top": 250,
        "height": 30
      }
    },
    
    {
      "outlet": "requirement_label", 
      "type": "label",
      "autolayout": {
        "top": 230,
        "center_x": 70,
        "width": 160,
        "height": 20
      },
      "content": "a cada",
      "font": {
        "name": "Roboto",
        "size": 14,
        "color": "666666"
      }
    },         
    
    {
      "outlet": "requirement_field",
      "type": "text_field",
      "placeholder": "Ex: R$100,00",
      "auto_capitalization": false,
      "underlined": true,          
      "autolayout": {
        "width": 160,
        "center_x": 70,
        "top": 250,
        "height": 30
      }
    },
    
    {
      "type": "label",
      "outlet": "period_select_label",
      "content": "Selecione o período de validade do crédito:",
      "autolayout": {
        "leading": 10,
        "center_x": 0,
        "top": 290,
        "width": 320,
        "height": 20
      },
      "font": {
        "name": "Roboto",
        "color": "333333",
        "size": 15
      }
    },        
    
    {
      "outlet": "period_select",
      "type": "text_field",
      "placeholder": "",
      "underlined": true, 
      "value": "Selecione",
      "line_color": "000000",
      "has_options": true,
      "autolayout": {
        "leading": 10,
        "trailing": -10,
        "width": 320,
        "center_x": 0,
        "top": 320,
        "height": 30
      },
      "font": {
        "name": "Roboto",
        "size": 14,
        "color": "000000"
      }
    },
    
    {
      "outlet": "save_button", 
      "type": "button",
      "title": "SALVAR",
      "color": "F15E4F",
      "action": "save_discount",
      "corner_radius": 6.0,
      "font":{
        "name": "Roboto-Bold",
        "size": "18"
      },
      "autolayout": {
        "bottom": -60,
        "center_x": 0,
        "width": 300,
        "height": 50
      }
    },                  
  ]
}