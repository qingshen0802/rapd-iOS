{
  "background_color": "ffffff",
  "title_color": "364655",
  "form_controller": true,
  "elements": [
    {
      "outlet": "reset_password_label",
      "type": "label",
      "content": "Para prosseguir, precisamos primeiramente confirmar seu celular.",
      "text_alignment": "left",
      "font": {
        "name": "Roboto",
        "size": 14,
        "color": "364655"
      },
      "autolayout": {
        "width": 300,
        "center_x": 0,
        "top": 80,
        "height": 40
      },
      
    },
    
    {
      "outlet": "phone_number_field",
      "type": "text_field",
      "placeholder": "Celular cadastrado",
      "underlined": true,          
      "autolayout": {
        "width": 300,
        "center_x": 0,
        "top": 130,
        "height": 30
      }
    },

    {
      "outlet": "reset_password_button", 
      "type": "button",
      "title": "Redefinir senha",
      "color": "F15E4F",
      "action": "resetPassword",
      "corner_radius": 6.0,
      "autolayout": {
        "bottom": -15,
        "leading": 20,
        "trailing": -20,
        "height": 50,
        "attach_to_super_super_view": true
      }
    },   
  ]
}