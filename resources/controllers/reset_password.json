{
  "background_color": "ffffff",
  "title_color": "364655",
  "form_controller": true,
  "elements": [
    {
      "outlet": "reset_password_label",
      "type": "label",
      "content": "Insira e confirme sua nova senha.",
      "text_alignment": "left",
      "font": {
        "name": "Roboto-Light",
        "size": 14,
        "color": "364655"
      },
      "autolayout": {
        "width": 300,
        "center_x": 0,
        "top": 50,
        "height": 40
      },
      
    },
    
    {
      "outlet": "password_field",
      "next_outlet": "confirm_password_field",
      "type": "text_field",
      "password": true,
      "placeholder": "Digite uma nova senha",
      "underlined": true,          
      "autolayout": {
        "width": 300,
        "center_x": 0,
        "top": 100,
        "height": 30
      }
    },
    
    {
      "outlet": "confirm_password_field",
      "type": "text_field",
      "placeholder": "Confirme a senha digitada",
      "password": true,
      "underlined": true, 
      "autolayout": {
        "width": 300,
        "center_x": 0,
        "top": 150,
        "height": 30
      }
    },        

    {
      "outlet": "confirm_password_reset_button", 
      "type": "button",
      "title": "ALTERAR SENHA",
      "color": "F15E4F",
      "font":{
        "name": "Roboto-Bold",
        "size": "18"
      },
      "action": "confirmResetPassword",
      "corner_radius": 6.0,
      "autolayout": {
        "top": 440,
        "center_x": 0,
        "width": 300,
        "height": 50
      }
    },   
  ]
}